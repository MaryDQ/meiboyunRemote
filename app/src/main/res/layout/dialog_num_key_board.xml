<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:orientation="vertical"
                                                   android:id="@+id/ctlNumKeyBoard"
                                                   android:background="#fff"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">


    <com.sunday.common.widgets.NumberKeyWordView
            android:visibility="visible"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.74"
            app:layout_constraintHeight_percent=".658"
            app:layout_constraintVertical_bias="0.42000002"
            android:id="@+id/numberKeyWordView"/>


    <ImageView
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:src="@drawable/drawable_call_audio_iv_selector"
            android:id="@+id/ivCallAudio"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.32"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/numberKeyWordView"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:src="@drawable/drawable_call_video_iv_selector"
            android:id="@+id/ivCallVideo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.69"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/numberKeyWordView"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/drawable_delete_btn_selector"
            android:id="@+id/ivNumDelete"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <EditText
            android:background="@null"
            android:layout_marginEnd="10dp"
            android:textColor="#ff333333"
            android:textSize="26sp"
            android:inputType=""
            android:singleLine="true"
            android:text=""
            android:hint=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvInputNum"
            app:layout_constraintEnd_toEndOf="@+id/numberKeyWordView"
            app:layout_constraintTop_toTopOf="@+id/ivNumDelete"
            app:layout_constraintBottom_toBottomOf="@+id/ivNumDelete"
            />


</androidx.constraintlayout.widget.ConstraintLayout>