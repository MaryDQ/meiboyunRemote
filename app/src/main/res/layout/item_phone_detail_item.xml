<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="118dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:background="#fff"
        >


    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/icon_phone_detial_item_default_icon"
            android:id="@+id/ivLeftAvatar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/icon_phone_detial_item_default_icon"
            android:id="@+id/ivRightAvatar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"/>

    <TextView
            android:textSize="12sp"
            android:textColor="#ff999999"
            android:text="主叫"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="@+id/ivLeftAvatar"
            app:layout_constraintEnd_toEndOf="@+id/ivLeftAvatar"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/ivLeftAvatar"/>

    <TextView
            android:textSize="12sp"
            android:textColor="#ff999999"
            android:text="被叫"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            app:layout_constraintStart_toStartOf="@+id/ivRightAvatar"
            app:layout_constraintEnd_toEndOf="@+id/ivRightAvatar"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/ivRightAvatar"/>

    <TextView
            android:text="TextView"
            android:layout_width="65dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/tvCallName"
            android:textColor="#ff333333"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/ivLeftAvatar"
            app:layout_constraintStart_toStartOf="@+id/ivLeftAvatar"
            app:layout_constraintTop_toBottomOf="@+id/ivLeftAvatar"
            android:layout_marginTop="4dp"/>

    <TextView
            android:text="TextView"
            android:textColor="#ff333333"
            android:textSize="14sp"
            android:layout_width="65dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/tvBeCalledName"
            app:layout_constraintEnd_toEndOf="@+id/ivRightAvatar"
            app:layout_constraintStart_toStartOf="@+id/ivRightAvatar"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/ivRightAvatar"/>

    <TextView
            android:textColor="#ff333333"
            android:textSize="15sp"
            android:text="语音通话"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvCallTyep"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

    <TextView
            android:textSize="14sp"
            android:text="22:22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvConnectedTime"
            app:layout_constraintEnd_toEndOf="@+id/tvCallTyep"
            app:layout_constraintStart_toStartOf="@+id/tvCallTyep"
            app:layout_constraintTop_toBottomOf="@+id/tvCallTyep"
            android:layout_marginTop="3dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>