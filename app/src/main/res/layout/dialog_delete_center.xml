<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/drawable_white_8dp_rect"
        android:layout_width="276dp"
        android:layout_height="157dp">


    <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDeleteCenterTitle"
            android:textColor="#ff333333"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            />

    <View
            android:layout_marginTop="66dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#F3F3F3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/viewLine001"/>

    <TextView
            app:layout_constraintBottom_toTopOf="@id/viewLine002"
            app:layout_constraintTop_toBottomOf="@id/viewLine001"
            android:text="@string/delete"
            android:id="@+id/tvDelete"
            android:textColor="#ffd1584a"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

    <View
            android:layout_marginTop="111dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#F3F3F3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/viewLine002"/>

    <TextView
            android:id="@+id/tvCancel"
            android:textColor="#ff999999"
            android:textSize="16sp"
            android:text="@string/cancel"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewLine002"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>